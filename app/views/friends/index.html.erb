<p id="notice"><%= notice %></p>

<h1>Friends</h1>

<table class="table table-striped table-bordered align-middle table-sm">
  <thead class="table-dark">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
      <tr >
        <td class="align-middle"><%= friend.first_name %></td>
        <td class="align-middle"><%= friend.last_name %></td>
        <td class="align-middle"><%= friend.email %></td>
        <td class="align-middle"><%= friend.phone %></td>
        <td class="align-middle"><%= friend.twitter %></td>
        <td class="align-middle"><%= link_to 'Show', friend , class:"btn btn-info" %></td>
        <td class="align-middle"><%= link_to 'Edit', edit_friend_path(friend) , class:"btn btn-warning" %></td>
        <td class="align-middle"><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } ,  class:"btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-info" %>
